<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dawars.billingapp.MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/items_list"
                android:layout_width="150dp"
                android:layout_height="match_parent">


            </ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cus_name_tv"
                        style="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:text="Customer Name"
                        android:textSize="20sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cus_name"
                        android:hint="customer name"
                        android:paddingLeft="8dp" />

                    <TextView
                        android:id="@+id/phn_numbr"
                        style="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:text="Contact Number"
                        android:textSize="20sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="number    "
                        android:id="@+id/cus_phn"
                        android:paddingLeft="8dp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/items_rv">
                </android.support.v7.widget.RecyclerView>

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:columnCount="3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total :"
                                android:textSize="20sp"
                                android:padding="8dp"
                                android:textColor="@color/colorPrimaryDark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="gross-"
                                android:paddingLeft="30dp"
                                android:id="@+id/gross_wt"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimaryDark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pure-"
                                android:id="@+id/pure_wt"
                                android:paddingLeft="30dp"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimaryDark"/>

                        </GridLayout>
                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Bhav(Gold MCX+TAX):"/>

                            <EditText
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textSize="20sp"
                                android:id="@+id/bhav"
                                android:inputType="number"/>
                        </GridLayout>
                        <GridLayout
                            android:layout_width="wrap_content"
                            android:columnCount="2"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Total Amount Payble:"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="18sp"
                                android:textSize="20sp"
                                android:id="@+id/amt_payble"
                                android:textStyle="bold"
                                android:text="Amount"/>


                        </GridLayout>

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="To be Pay:"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="18sp"
                                android:textStyle="bold"
                                android:id="@+id/to_be_paid"
                                android:textSize="20sp"
                                android:text="Amount"/>


                        </GridLayout>

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:columnCount="4">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gold Recieved:"
                                android:textSize="20sp"

                                android:textColor="@color/colorPrimaryDark"/>
                            <EditText
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:hint="gold weight"
                                android:id="@+id/gold_reciev"
                                android:inputType="numberDecimal|number"
                                android:paddingLeft="18dp"/>

                            <EditText
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="* 99.50"
                                android:id="@+id/gold_rate"
                                android:inputType="number|numberDecimal"
                                android:paddingLeft="18dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pure"
                                android:id="@+id/gold_reciev_pure"
                                android:textSize="20sp"
                                android:paddingLeft="18dp"
                                android:textColor="@color/colorPrimaryDark"/>
                        </GridLayout>

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:columnCount="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Total Cash Recieved:"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Total cash"
                                android:id="@+id/cash_reciev"
                                android:inputType="number"
                                android:paddingLeft="18dp"/>

                        </GridLayout>




                    </LinearLayout>
                </ScrollView>



            </LinearLayout>

        </LinearLayout>


    </HorizontalScrollView>


</android.support.constraint.ConstraintLayout>
